<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Fabrics</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"><b>Fabrics</b></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/home">Home</a>
              </li>
            </ul>
              <br></br>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/product">Add Product</a>
              </li> 
            </ul>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" href="/cart">Shopping Bag</a>
                </li> 
              </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Product Details</h2></div>
        <br>
        <% if (products) { %> <!-- Check if product data exists -->
            <div>
                <p><b>Product ID:</b><br> <%= products.productid %></p>
                <p><b>Product Name:</b><br> <%= products.productname %></p>
                <p><b>Product Price:</b><br>$<%= products.productprice %></p>
                <p><b>Product Image:</b><br> <img src = "<%= products.image %>" width="20%"></p>
            </div>
        <% } else { %>
            <p>No product found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
