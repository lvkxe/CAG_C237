<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Fabrics</title>
    <style>
        .product-card img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }
        .product-card {
            border: none;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }
        .product-card:hover {
            transform: scale(1.05);
        }
        .product-card .card-body {
            padding: 1rem;
        }
        .product-card .card-footer {
            background-color: white;
            border-top: none;
        }
        .button5 {background-color: #555555;}
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><b>Fabrics</b></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addProduct">Add Product</a>
                    </li>
                </ul>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                      <li class="nav-item">
                        <a class="nav-link" href="/cart">Shopping Bag</a>
                      </li> 
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <body background></body>
    <div class="container mt-4">
        <div class="text-center mb-5">
            <h1 style="color: black"><b><b>Products from Fabrics Database</b></b></h1>
        </div>

        <div class="row">
            <% for(let i=0; i < products.length; i++) { %>
                <div class="col-md-3 mb-3">
                    <div class="card product-card h-100">
                        <td><%= products[i].productid %></td>
                            <img src="<%= products[i].image %>" class="card-img-top" alt="<%= products[i].productname %>">
                        </a>
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= products[i].productname %></h5>
                            <p class="card-text">$<%= products[i].productprice %></p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="/editProduct/<%= products[i].productid %>" class="btn btn-primary">Edit</a>
                            <a href="/deleteProduct/<%= products[i].productid %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                            <a class="btn btn-success">Add Cart</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
