    <body background="image/represent2.avif">
    <div class="container">
        <br>
        <div class="text-center" style="color: white"><h1><b>Add Product</b></h1></div>
        <br>
        <div class="text-center">
          <form action="/addProduct" method="POST">
            <label for="id" style="color: white"><h4><b>Product ID:</b></h4></label><br>
            <input type="number" id="productid" name="productid" min="0" step="1" required><br><br>
            
            <label for="name"  style="color: white"><h4><b>Product Name:</b></h4></label><br>
            <input type="text" id="productname" name="productname" required><br><br>
            
            <label for="price"  style="color: white"><h4><b>Product Price:</b></h4></label><br>
            <input type="number" id="productprice" name="productprice" min="0" step="0.01" required><br><br>
            
            <label for="image"  style="color: white"><h4>Image:</h4></label><br>
            <input type="file" id="image" name="image" accpet="image/*" required  style="color: white"><br><br>
            
            <button type="submit">Add Product</button>
        </form>
        </div>
    </div>
</body>
